<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_head_height"
    android:background="@drawable/common_head_bg">

    <TextView
        android:id="@+id/head_title"
        style="@style/common_head_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/head_back_img"
        android:layout_width="@dimen/common_head_img_right_width"
        android:layout_height="@dimen/common_head_img_right_height"
        android:src="@drawable/common_head_back_btn"
        android:layout_marginLeft="@dimen/common_head_back_img_margin_left"
        android:layout_centerVertical="true"
        android:contentDescription="@string/empty" />

    <View
        android:id="@+id/head_back_btn"
        android:layout_width="@dimen/common_head_btn_right_width"
        android:layout_height="match_parent"
        android:onClick="back"/>



</RelativeLayout>