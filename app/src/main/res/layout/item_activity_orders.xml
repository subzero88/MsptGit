<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_activity_orders_layout_minheight"
    android:minHeight="@dimen/item_activity_orders_layout_minheight">

    <CheckBox
        android:id="@+id/item_activity_orders_checkbox"
        android:layout_width="@dimen/item_activity_orders_checkbox_side_length"
        android:layout_height="@dimen/item_activity_orders_checkbox_side_length"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/item_activity_orders_checkbox_margin_left"
        android:checked="false" />

    <ImageView
        android:id="@+id/item_activity_orders_logo"
        android:layout_width="@dimen/item_orders_width"
        android:layout_height="@dimen/item_order_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/item_activity_orders_logo_margin_left"
        android:layout_toRightOf="@id/item_activity_orders_checkbox"
        android:background="@color/red"
        android:contentDescription="@string/empty" />

    <TextView
        android:id="@+id/item_activity_orders_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/item_activity_orders_text3_margin_left"
        android:layout_marginTop="@dimen/item_activity_orders_text1_margin_top"
        android:layout_toRightOf="@id/item_activity_orders_logo"
        android:text="1"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/item_activity_orders_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_activity_orders_text1"
        android:layout_below="@id/item_activity_orders_text1"
        android:text="2"
        android:textColor="@color/black" />


    <ImageView
        android:id="@+id/item_activity_orders_logo_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_activity_orders_money"
        android:layout_alignLeft="@id/item_activity_orders_text1"
        android:layout_below="@id/item_activity_orders_text2"
        android:src="@drawable/item_activity_orders_logo_order" />

    <TextView
        android:id="@+id/item_activity_orders_order_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_activity_orders_text2"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/item_activity_orders_logo_order"
        android:text="4" />

    <TextView
        android:id="@+id/item_activity_orders_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_activity_orders_logo_order"
        android:layout_alignStart="@+id/item_activity_orders_logo_order"
        android:layout_below="@+id/item_activity_orders_order_num"
        android:text="5"
        android:textColor="@color/red" />

    <Button
        android:id="@+id/item_activity_orders_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/item_activity_orders_btn_margin_right"
        android:layout_marginTop="@dimen/item_activity_orders_btn_margin_top"
        android:background="@drawable/item_acty_orders_btn"
        android:text="123456"
        android:textColor="@color/item_activity_orders_btn_text_color" />

    <TextView
        android:id="@+id/item_activity_orders_num_int"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/item_activity_orders_num_int_margin_bottom"
        android:layout_marginRight="@dimen/item_activity_orders_num_int_margin_right"
        android:text="9"
        android:textColor="@color/item_activity_orders_num_int_color" />

    <TextView
        android:id="@+id/item_activity_orders_num_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/item_activity_orders_num_int_margin_bottom"
        android:layout_toLeftOf="@id/item_activity_orders_num_int"
        android:text="@string/item_activity_orders_num" />

</RelativeLayout>
