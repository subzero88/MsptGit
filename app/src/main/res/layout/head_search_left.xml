<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_head_height"
    android:background="@drawable/common_head_bg">

    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="@dimen/common_head_search_width"
        android:layout_height="@dimen/common_head_search_height"
        android:layout_centerInParent="true"
        android:background="@drawable/index_search_bg">

        <EditText
            android:id="@+id/head_edt"
            style="@style/head_edt"
            android:layout_width="@dimen/common_head_edt_width"
            android:layout_height="@dimen/common_head_edt_height"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/head_back_img"
        android:layout_width="@dimen/common_head_img_right_width"
        android:layout_height="@dimen/common_head_img_right_height"
        android:src="@drawable/common_head_back_btn"
        android:layout_marginLeft="@dimen/common_head_back_img_margin_left"
        android:layout_centerVertical="true"
        android:contentDescription="@string/empty" />

    <View
        android:id="@+id/head_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/rl_search"
        android:onClick="back"/>

    <Button
        android:id="@+id/head_right_btn"
        android:layout_width="@dimen/head_right_img_width_height"
        android:layout_height="@dimen/head_right_img_width_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:onClick="changeState"
        android:layout_marginRight="@dimen/head_right_margin_right"
        android:background="@drawable/goods_list_state_sel"/>

</RelativeLayout>