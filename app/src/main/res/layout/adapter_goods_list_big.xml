<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/common_list_item_big_height"
    android:background="@drawable/goods_list_big_bg"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/adapter_goods_list_big_img"
        android:layout_width="@dimen/common_list_item_big_img_width"
        android:layout_height="@dimen/common_list_item_big_img_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_list_item_big_img_margin_top" />

    <TextView
        android:id="@+id/adapter_goods_list_big_rmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_rmb"
        android:gravity="center"
        android:textSize="@dimen/common_list_item_big_txt_money"
        android:layout_marginLeft="@dimen/common_list_item_big_txt_margin_left"
        android:layout_marginBottom="@dimen/common_list_item_big_txt_margin_bottom"
        android:textColor="@color/red"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/adapter_goods_list_big_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/adapter_goods_list_big_rmb"
        android:textColor="@color/red"
        android:textSize="@dimen/common_list_item_big_txt_money"
        android:text="@string/test"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/common_list_item_big_txt_margin_bottom" />

    <TextView
        android:id="@+id/adapter_goods_list_big_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_list_item_big_txt_name"
        android:textColor="@color/gray_goods_list_name"
        android:layout_marginLeft="@dimen/common_list_item_big_txt_margin_left"
        android:layout_marginBottom="@dimen/common_list_item_big_txt_margin_bottom"
        android:layout_marginRight="@dimen/common_list_item_big_txt_margin_right"
        android:layout_above="@id/adapter_goods_list_big_rmb"
        android:ellipsize="end"
        android:singleLine="true" />

</RelativeLayout>