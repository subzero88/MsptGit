<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/acty_goods_list_head"
        layout="@layout/head_search_left" />

    <include
        android:id="@+id/acty_goods_list_sort_rg"
        layout="@layout/layout_goods_list_sort" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/goods_list_sort_bottom_line_height"
        android:background="@drawable/goods_list_bottom_line"/>

    <FrameLayout
        android:id="@+id/goods_list_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>