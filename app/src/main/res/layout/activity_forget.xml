<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg">

    <include
        android:id="@+id/forget_head"
        layout="@layout/head_normal" />

    <RelativeLayout
        android:id="@+id/activity_forget_rl_phone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/login_phone_rl_height"
        android:layout_below="@id/forget_head"
        android:layout_marginLeft="@dimen/login_phone_margin_left"
        android:layout_marginRight="@dimen/login_phone_margin_left"
        android:layout_marginTop="@dimen/login_phone_margin_top"
        android:background="@drawable/login_edt_bg">

        <com.bm.mspt.view.ClearEditText
            android:id="@+id/activity_forget_edt_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/regist_phone_hint"
            android:padding="3dp"
            android:inputType="phone"
            android:maxLength="11"
            style="@style/login_txt"
            android:background="@null" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_forget_rl_verify"
        android:layout_width="@dimen/regist_verify_rl_width"
        android:layout_height="@dimen/login_phone_rl_height"
        android:layout_below="@id/activity_forget_rl_phone"
        android:layout_marginLeft="@dimen/login_phone_margin_left"
        android:layout_marginTop="@dimen/login_password_margin_top"
        android:background="@drawable/login_edt_bg">

        <com.bm.mspt.view.ClearEditText
            android:id="@+id/activity_forget_edt_verify"
            style="@style/login_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/regist_phone_verify"
            android:inputType="number"
            android:padding="3dp"
            android:background="@null" />
    </RelativeLayout>

    <Button
        android:id="@+id/activity_forget_btn_verify"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_phone_rl_height"
        android:layout_alignRight="@id/activity_forget_rl_phone"
        android:layout_below="@id/activity_forget_rl_phone"
        android:layout_marginLeft="@dimen/regist_verify_btn_margin_left"
        android:layout_toRightOf="@id/activity_forget_rl_verify"
        android:layout_marginTop="@dimen/login_password_margin_top"
        android:background="@drawable/regist_verify_btn"
        android:text="@string/regist_verify"
        android:textSize="@dimen/regist_verify_btn_txt"
        android:textColor="@color/white" />

    <RelativeLayout
        android:id="@+id/activity_forget_rl_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_phone_rl_height"
        android:layout_below="@id/activity_forget_rl_verify"
        android:layout_marginLeft="@dimen/login_phone_margin_left"
        android:layout_marginRight="@dimen/login_phone_margin_left"
        android:layout_marginTop="@dimen/login_password_margin_top"
        android:background="@drawable/login_edt_bg">

        <com.bm.mspt.view.ClearEditText
            android:id="@+id/activity_forget_edt_password"
            style="@style/login_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/forget_phone_password"
            android:inputType="textPassword"
            android:maxLength="12"
            android:padding="3dp"
            android:background="@null" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_forget_rl_password_again"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_phone_rl_height"
        android:layout_below="@id/activity_forget_rl_password"
        android:layout_marginLeft="@dimen/login_phone_margin_left"
        android:layout_marginRight="@dimen/login_phone_margin_left"
        android:layout_marginTop="@dimen/login_password_margin_top"
        android:background="@drawable/login_edt_bg">

        <com.bm.mspt.view.ClearEditText
            android:id="@+id/activity_forget_edt_password_again"
            style="@style/login_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/forget_phone_password_again"
            android:inputType="textPassword"
            android:padding="3dp"
            android:maxLength="12"
            android:background="@null" />
    </RelativeLayout>

    <Button
        android:id="@+id/activity_forget_btn_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_login_height"
        android:layout_below="@id/activity_forget_rl_password_again"
        android:layout_marginTop="@dimen/forget_commit_margin_top"
        android:layout_marginLeft="@dimen/login_login_margin_left"
        android:layout_marginRight="@dimen/login_login_margin_left"
        android:text="@string/forget_commit"
        android:textSize="@dimen/regist_regist_txt"
        android:textColor="@color/white"
        android:background="@drawable/login_btn_bg" />

</RelativeLayout>