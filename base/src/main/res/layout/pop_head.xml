<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="#dbdbdb"
              android:paddingTop="30dp"
              android:paddingBottom="14dp"
              android:layout_height="wrap_content">

    <Button
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="@string/photo"
            android:textSize="15sp"
            android:textColor="#2978cc"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:id="@+id/pop_head_button1"
            android:background="@drawable/pop_head_button_selector1"
            />


    <Button
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="@string/camera"
            android:textSize="15sp"
            android:textColor="#2978cc"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:id="@+id/pop_head_button2"
            android:background="@drawable/pop_head_button_selector1"
            />

    <Button
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="@string/cancel"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:id="@+id/pop_head_button3"
            android:background="@drawable/pop_head_button_selector2"
            />

</LinearLayout>